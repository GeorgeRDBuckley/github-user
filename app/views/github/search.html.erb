<div class="content">
  <center>
    <div class="header">
      <h1><i class="fab fa-github"></i><br/>Favourite Language</h1>
    </div>
    <div class="search-container">
      <div class="form-inline">
        <%= form_tag do %>
          <div class="search-field-container">
            <%= text_field_tag :user, params[:user], class: "search-field" %>
          </div>
        <% end %>
      </div>
    </div>
    <% unless @language.nil? %>
      <div class="results">
        <% if @error %>
          <p class="danger results-text"><%= @language %></p>
        <% else %>
          <p class="results-text"><%= params[:user] %>'s favourite language is: <span class="success"><%= @language %></span></p>
        <% end %>
      </div>
    <% end %>
  </center>
</div>

